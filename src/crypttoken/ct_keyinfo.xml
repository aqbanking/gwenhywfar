        <inline loc="code">
          <content>
             void $(struct_prefix)_SetModulus($(struct_type) *st, const uint8_t *p, uint32_t len) {
               assert(st);
               
               if (st->modulus)
                 GWEN_Buffer_free(st->modulus);
               if (p && len) {
                 st->modulus=GWEN_Buffer_new(0, len, 0, 1);
                 GWEN_Buffer_AppendBytes(st->modulus, (const char*) p, len);
               }
               else
                 st->modulus=NULL;
